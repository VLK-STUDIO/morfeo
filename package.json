{
  "name": "root",
  "private": true,
  "author": {
    "name": "Mauro Erta",
    "email": "mauro@vlkstudio.com"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:docs": "lerna bootstrap --scope=@morfeo/app-docs",
    "bootstrap:examples": "lerna bootstrap --scope=@morfeo/example-*",
    "bootstrap:packages": "lerna bootstrap --ignore=@morfeo/{app-*,example-*}",
    "bootstrap:web-extension": "lerna bootstrap --scope=@morfeo/app-web-extension",
    "build": "lerna run build",
    "build:docs": "lerna run build --scope=@morfeo/app-docs",
    "build:packages": "lerna run build --ignore=@morfeo/{app-*,example-*}",
    "build:web-extension": "lerna run build --scope=@morfeo/app-web-extension",
    "clean": "lerna clean --yes",
    "deploy:web-extension": "lerna run deploy --scope=@morfeo/web-extension",
    "postversion": "ts-node scripts/version.ts && yarn version:devtool",
    "postversion:major": "yarn postversion major",
    "postversion:minor": "yarn postversion minor",
    "prepare": "husky install",
    "prettify": "yarn prettify:js && yarn prettify:ts",
    "prettify:js": "prettier --write \"**/*.js\"",
    "prettify:ts": "prettier --write \"**/*.ts\"",
    "publish": "lerna publish from-package --yes --no-verify-access",
    "reset": "yarn clean && yarn && yarn bootstrap && yarn build",
    "reset:packages": "yarn clean && yarn && yarn bootstrap:packages && yarn build:packages",
    "start:benchmarks": "lerna run all --scope=@morfeo/app-benchmarks",
    "start:docs": "lerna run start --scope=@morfeo/app-docs",
    "start:react-example": "lerna run start --scope=@morfeo/example-react",
    "start:svelte-example": "lerna run dev --scope=@morfeo/example-svelte",
    "test": "jest --detectOpenHandles",
    "test:ci": "NODE_OPTIONS=--max-old-space-size=8192 yarn test --coverage",
    "test:coverage": "yarn test --coverage",
    "test:watch": "yarn test --watch",
    "version:devtool": "ts-node scripts/version-devtool.ts",
    "version:major": "lerna version major --no-push --no-git-tag-version --conventional-commits",
    "version:minor": "lerna version minor --no-push --no-git-tag-version --conventional-commits",
    "version:patch": "lerna version patch --no-push --no-git-tag-version --conventional-commits"
  },
  "dependencies": {
    "csstype": "3.1.0",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-native": "0.68.2"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.1",
    "@commitlint/config-lerna-scopes": "17.0.0",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "13.3.0",
    "@types/glob": "7.2.0",
    "@types/jest": "27.5.1",
    "@types/node": "17.0.35",
    "@types/react": "18.0.9",
    "@types/react-dom": "18.0.5",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.26.0",
    "eslint": "8.16.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.30.0",
    "eslint-plugin-react-hooks": "4.5.0",
    "husky": "5.2.0",
    "jest": "28.1.0",
    "jest-environment-jsdom": "28.1.0",
    "lerna": "5.0.0",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.3",
    "ts-node": "10.8.0",
    "tslib": "2.4.0",
    "typescript": "4.6.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/morfeojs/morfeo"
  },
  "homepage": "https://morfeo.dev",
  "bugs": {
    "url": "https://github.com/morfeojs/morfeo/issues"
  }
}
