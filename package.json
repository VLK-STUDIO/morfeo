{
  "name": "root",
  "private": true,
  "author": {
    "name": "Mauro Erta",
    "email": "mauro@vlkstudio.com"
  },
  "scripts": {
    "clean": "lerna clean --yes",
    "build": "lerna run build",
    "build:docs": "yarn --cwd=docs build",
    "watch": "lerna run watch",
    "reset": "yarn clean && yarn && lerna bootstrap && yarn build",
    "init:docs": "yarn --cwd=docs && ts-node scripts/bootstrap-app.ts docs",
    "init:devtool": "yarn --cwd=devtool && ts-node scripts/bootstrap-app.ts devtool",
    "init:react-example": "yarn --cwd=examples/react && ts-node scripts/bootstrap-app.ts examples/react",
    "init:svelte-example": "yarn --cwd=examples/svelte  && ts-node scripts/bootstrap-app.ts examples/svelte",
    "init:react-native-example": "yarn --cwd=examples/react-native  && ts-node scripts/bootstrap-app.ts examples/react-native",
    "init:benchmarks": "yarn --cwd=benchmarks && ts-node scripts/bootstrap-app.ts benchmarks",
    "start:docs": "yarn --cwd=docs start",
    "start:react-example": "yarn --cwd=examples/react start",
    "start:svelte-example": "yarn --cwd=examples/svelte dev",
    "start:benchmarks": "yarn --cwd=benchmarks all",
    "prepare": "husky install",
    "prettify": "yarn prettify:js && yarn prettify:ts",
    "prettify:js": "prettier --write \"**/*.js\"",
    "prettify:ts": "prettier --write \"**/*.ts\"",
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "publish": "yarn reset && lerna publish from-package --yes --no-verify-access",
    "version": "lerna version patch --no-push --no-git-tag-version --conventional-commits",
    "version:minor": "lerna version minor --no-push --no-git-tag-version --conventional-commits",
    "version:devtool": "ts-node scripts/version-devtool.ts",
    "postversion": "ts-node scripts/version.ts && yarn version:devtool",
    "postversion:minor": "yarn postversion minor"
  },
  "dependencies": {
    "csstype": "^3.0.11",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-native": "^0.67.2",
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-lerna-scopes": "^12.0.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.0.1",
    "@testing-library/react-hooks": "^8.0.0",
    "@types/jest": "^26.0.21",
    "@types/node": "^17.0.14",
    "@types/react": "^18.0.3",
    "@types/react-dom": "^18.0.0",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.3",
    "jest": "26.6.0",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/morfeojs/morfeo"
  },
  "homepage": "https://morfeo.dev",
  "bugs": {
    "url": "https://github.com/morfeojs/morfeo/issues"
  }
}
