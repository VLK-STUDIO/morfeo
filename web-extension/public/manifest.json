{
  "manifest_version": 3,
  "name": "__MSG_name__",
  "version": "0.7.0",
  "description": "__MSG_description__",
  "author": "Mauro Erta",
  "devtools_page": "devtool.html",
  "options_page": "options.html",
  "homepage_url": "https://morfeo.dev",
  "default_locale": "en",
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "action": {
    "default_title": "morfeo",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon-16.png",
      "48": "img/icon-48.png",
      "128": "img/icon-128.png"
    }
  },
  "externally_connectable": {
    "ids": [
      "*"
    ]
  },
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "exclude_globs": [
        "https://www.google*"
      ],
      "js": [
        "contentScript.bundle.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
